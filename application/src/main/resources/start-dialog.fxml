<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <RadioButton id="radio_basex" fx:id="radio_basex" mnemonicParsing="false" selected="true"
                     text="Verbindung mit BaseX-Datenbank aufbauen:" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <toggleGroup>
                <ToggleGroup fx:id="group1"/>
            </toggleGroup>
        </RadioButton>
        <GridPane disable="${! radio_basex.selected}">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="444.0" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Server-URL:" />
                <TextField id="server" text="https://basex.ukmuenster.de/rest" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" />
                <Label text="Nutzername:" GridPane.rowIndex="1" />
                <TextField id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Passwort:" GridPane.rowIndex="2" />
                <PasswordField id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Datenbank:" GridPane.rowIndex="3" />
                <TextField id="database" text="2021" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </GridPane>
        <Separator/>
        <RadioButton id="radio_file" fx:id="radio_file" mnemonicParsing="false" text="Verzeichnis einlesen:" toggleGroup="$group1" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </RadioButton>
        <HBox disable="${! radio_file.selected}" spacing="5.0">
            <children>
                <Button id="button_file" mnemonicParsing="false" prefHeight="28.0" prefWidth="136.0"
                        text="Durchsuchen..."/>
                <Label id="label_file" prefHeight="27.0" text="Kein Verzeichnis ausgewÃ¤hlt">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
        </HBox>
        <ButtonBar id="button_bar" prefHeight="53.0">
            <buttons>
                <Button id="button_cancel" mnemonicParsing="false" text="Abbrechen"/>
                <Button id="button_confirm" mnemonicParsing="false" text="OK" defaultButton="true"/>
            </buttons>
            <VBox.margin>
                <Insets left="20.0" right="20.0"/>
            </VBox.margin>
        </ButtonBar>
    </children>
</VBox>
